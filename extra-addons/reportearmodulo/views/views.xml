<odoo>
  <data>
    <record id="action_expense_report" model="ir.actions.report">
      <field name="name">Reportador</field>
      <field name="model">hr.expense</field>
      <field name="report_type">qweb-pdf</field>
      
      <field name="report_name">reportearmodulo.report_proba_template</field>
      <field name="report_file">reportearmodulo.report_proba_template</field>
      
      <field name="binding_model_id" ref="hr_expense.model_hr_expense"/>
      <field name="binding_type">report</field>
    </record>

    <template id="report_proba_template">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <div class="page">
              <h2>Expense Report</h2>
              <p>Employee: <span t-field="o.employee_id.name"/></p>
              <p>Date: <span t-field="o.date"/></p>
              <p>Amount: <span t-field="o.total_amount"/></p>
              <p>Description: <span t-field="o.description"/></p>
            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>